{
  "manifest_version": 3,
  "name": "Smart Email Assistant",
  "version": "1.0.0",
  "description": "AI powered reply genertor",
   "permissions": ["activeTab", "storage"],
     "host_permissions": [
    "https://localhost:8080/*",
    "*://mail.google.com/*"
  ],
 "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://mail.google.com/*"
      ],
      "css":["content.css"],
      "run_at":"document_end"
    }
  ],
   "web_accessible_resources": [
    {
      "resources": [ "test1.png", "test2.png" ],
    "matches": [
        "*://mail.google.com/*"
      ]    
    }
  ],
  "action":{
    "default_title":"Smart Email Assistant."
  }

}